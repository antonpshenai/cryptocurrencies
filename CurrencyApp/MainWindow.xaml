<Window x:Class="CurrencyApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <StackPanel Background="LightSteelBlue">
                <TextBlock Text="Crypto Info" TextAlignment="Center"/>

                <Button Content="TOP 10"/>
                <Button Content="Market"/>
                <Button Content="Coin"/>
                <Button Content="Market"/>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="2" HorizontalAlignment="Center" Width="636">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="200*"/>
            </Grid.RowDefinitions>

        </Grid>
    </Grid>

</Window>
